<odoo>
  <data>
    <record id="view_res_bank_form_inherit" model="ir.ui.view">
        <field name="name">res.bank.form.inherit</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='bank_details']/field[@name='bic']" position="after">
                <field name="bank_code" />
            </xpath>
            <xpath expr="//group[@name='bank_details']" position="before">
                <div>
                    <field name= "bank_logo" class="oe_avatar" nolabel="1" widget="image"/>
                </div>
            </xpath>

        </field>
    </record>

  </data>
</odoo>
